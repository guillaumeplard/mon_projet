<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
        http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <!-- doctrine Symfony-->
    <!-- creation de entity avec le fichier Auteur.orm.xml-->
    <entity name="gaelicBundle\Entity\Admin" table="admin">    <!-- name de mon bundle et le nom du fichier (orm.xml)-->
        <id name="id" type="integer">
            <generator strategy="AUTO" />
        </id>
        <field name="email" type= "text" column="email" />  <!-- creation de mes colonnes dans ma table-->
        <field name="password" type="text" column="password" />

    </entity>
</doctrine-mapping>